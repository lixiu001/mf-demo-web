{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"cli": {
		"analytics": false
	},
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"shell": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				},
				"@schematics/angular:application": {
					"strict": true
				}
			},
			"root": "",
			"sourceRoot": "src",
			"prefix": "shell",
			"architect": {
				"build": {
					"builder": "ngx-build-plus:browser",
					"options": {
						"outputPath": "dist/shell",
						"index": "src/index.html",
						"main": "src/main.ts",
						"polyfills": "src/polyfills.ts",
						"tsConfig": "tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							"src/favicon.ico",
							"src/assets"
						],
						"styles": [
							"src/styles.scss"
							
						],
						"scripts": [],
						"extraWebpackConfig": "webpack.config.js",
						"commonChunk": false
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "500kb",
									"maximumError": "1mb"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "2kb",
									"maximumError": "4kb"
								}
							],
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.prod.ts"
								}
							],
							"outputHashing": "all",
							"extraWebpackConfig": "webpack.prod.config.js"
						},
						"development": {
							"buildOptimizer": false,
							"optimization": false,
							"vendorChunk": true,
							"extractLicenses": false,
							"sourceMap": true,
							"namedChunks": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "ngx-build-plus:dev-server",
					"configurations": {
						"production": {
							"browserTarget": "shell:build:production",
							"extraWebpackConfig": "webpack.prod.config.js"
						},
						"development": {
							"browserTarget": "shell:build:development"
						}
					},
					"defaultConfiguration": "development",
					"options": {
						"port": 5000,
						"extraWebpackConfig": "webpack.config.js"
					}
				},
				"extract-i18n": {
					"builder": "ngx-build-plus:extract-i18n",
					"options": {
						"browserTarget": "shell:build",
						"extraWebpackConfig": "webpack.config.js"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "src/test.ts",
						"polyfills": "src/polyfills.ts",
						"tsConfig": "tsconfig.spec.json",
						"karmaConfig": "karma.conf.js",
						"inlineStyleLanguage": "scss",
						"assets": [
							"src/favicon.ico",
							"src/assets"
						],
						"styles": [
							"src/styles.scss"
						],
						"scripts": []
					}
				}
			}
		},
		"my-shared": {
			"projectType": "library",
			"root": "projects/my-shared",
			"sourceRoot": "projects/my-shared/src",
			"prefix": "lib",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:ng-packagr",
					"options": {
						"project": "projects/my-shared/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "projects/my-shared/tsconfig.lib.prod.json"
						},
						"development": {
							"tsConfig": "projects/my-shared/tsconfig.lib.json"
						}
					},
					"defaultConfiguration": "production"
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "projects/my-shared/src/test.ts",
						"tsConfig": "projects/my-shared/tsconfig.spec.json",
						"karmaConfig": "projects/my-shared/karma.conf.js"
					}
				}
			}
		},
		"dynamic-core": {
			"projectType": "library",
			"root": "projects/dynamic-core",
			"sourceRoot": "projects/dynamic-core/src",
			"prefix": "lib",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:ng-packagr",
					"options": {
						"project": "projects/dynamic-core/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "projects/dynamic-core/tsconfig.lib.prod.json"
						},
						"development": {
							"tsConfig": "projects/dynamic-core/tsconfig.lib.json"
						}
					},
					"defaultConfiguration": "production"
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "projects/dynamic-core/src/test.ts",
						"tsConfig": "projects/dynamic-core/tsconfig.spec.json",
						"karmaConfig": "projects/dynamic-core/karma.conf.js"
					}
				}
			}
		},
		"dynamic-components": {
			"projectType": "library",
			"root": "projects/dynamic-components",
			"sourceRoot": "projects/dynamic-components/src",
			"prefix": "lib",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:ng-packagr",
					"options": {
						"project": "projects/dynamic-components/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "projects/dynamic-components/tsconfig.lib.prod.json"
						},
						"development": {
							"tsConfig": "projects/dynamic-components/tsconfig.lib.json"
						}
					},
					"defaultConfiguration": "production"
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "projects/dynamic-components/src/test.ts",
						"tsConfig": "projects/dynamic-components/tsconfig.spec.json",
						"karmaConfig": "projects/dynamic-components/karma.conf.js"
					}
				}
			}
		}
	},
	"defaultProject": "shell"
}